            <div class="col-md-9">
                <div class="alert welcome-alert cat-alert" role="alert">
                    <div class="left-cat d-inline-block">
                        <p>Showing @ViewBag.Count results</p>
                    </div>
                    <div class="right-cat d-inline-block">
                        <div class="dropdown button-dropdown">
                            <button class="btn dropdown-toggle" id="catDropdownMenuLink1" data-toggle="dropdown">
                                Default Sorting
                            </button>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
                                <a class="dropdown-header">Sort Items</a>
                                <a class="dropdown-item" asp-action="Sort" asp-route-sort="new">Sort By Newest</a>
                                <a class="dropdown-item" href="/catalogue/sort/high">Sort By Price: Low to high</a>
                                <a class="dropdown-item" href="/catalogue/sort/low">Sort By Price: High to low</a>
                                <a class="dropdown-item" href="create-account.html">Sort By Current Bid: Low to high</a>
