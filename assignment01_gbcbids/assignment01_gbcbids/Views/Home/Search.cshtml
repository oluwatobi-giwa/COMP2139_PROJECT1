                <div class="card">
                    <div class="card-body">
                        <div class="row p-4">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 mb-5">
                                    <div class="prod-box">
                                        <div class="prod-i">
                                            <img src="~/Uploads/@item.itemImage" alt="#" />
                                        </div>
                                        <div class="item-timer">
                                            <div class="timer-days">
                                                <p>128</p>
                                                <span>Days</span>
                                            </div>

                                            <div class="timer-hours">
                                                <p>128</p>
                                                <span>Hours</span>
                                            </div>

                                            <div class="timer-minutes">
                                                <p>128</p>
                                                <span>Minutes</span>
                                            </div>

                                            <div class="timer-seconds">
                                                <p>128</p>
                                                <span>Seconds</span>
                                            </div>

                                        </div>

                                        <div class="item-name text-center">
                                            <a href="/catalogue/item/@item.itemId">@item.itemName</a>
                                        </div>

                                        <hr />

                                        <div class="item-price">
                                            <p>Current bid: &dollar;@item.itemCost</p>
                                        </div>


                                    </div>
                                </div>
