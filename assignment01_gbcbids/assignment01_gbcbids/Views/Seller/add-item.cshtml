@{
    ViewData["Title"] = "Add Category";
}

@model assignment01_gbcbids.Data.Item

@using Microsoft.AspNetCore.Identity
@using assignment01_gbcbids.Data;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!-- Background Image -->
<div class="background-img">
    <img src="~/assets/img/welcome.jpg" alt="" />
    <div class="overlay"></div>
    <div class="background-content">
        <h1>Add Item</h1>
        <p>...your home for awesome bids!!!</p>
    </div>
</div>
<!-- /Background Image -->
<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Account</li>
    </ol>
</nav>
<!-- Breadcrumb -->
<!-- Account Section -->
<section class="account-section">
    <div class="container">
        <div class="alert welcome-alert" role="alert">
            Welcome to your page, @User.Identity?.Name!
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <div class="avatar-box text-center">
                            <a href="" class="avatar">
                                <img src="~/assets/img/7309670.jpg" alt="" />
                            </a>
                            <p>@User.Identity?.Name <br /><span>toubie@gmail.com</span></p>
                        </div>
                        <hr />
                        <ul class="account-links">
                           <li><a href="/seller"><i class="fa-solid fa-dashboard"></i>&nbsp;Dashboard</a></li>
                            <li><a href="#"><i class="fa-solid fa-cart-plus"></i>&nbsp;Add Item</a></li>
                            @*<li><a href="edit-item"><i class="fa-solid fa-pen-to-square"></i>&nbsp;Edit Item</a></li>*@
                            <li><a href="seller/view-items"><i class="fa-solid fa-cart-arrow-down"></i>&nbsp;View Items</a></li>
                           @* <li><a href="edit-profile"><i class="fa-solid fa-address-card"></i>&nbsp;Edit Profile</a></li>*@
                            <li><a href="/account/logout"><i class="fa-solid fa-right-from-bracket"></i>&nbsp;Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="add-item" class="form" method="post" enctype="multipart/form-data">
                            <p>Please fill in the form below to add product!</p>
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <hr />
                            <label asp-for="itemName">Item Name&ast;</label>
                            <input asp-for="itemName" type="text" class="form-control">
                             <span asp-validation-for="itemName" class="text-danger"></span>
                             <br />

                            <label asp-for="itemDesc">Item Description&ast;</label>
                            <textarea asp-for="itemDesc" class="form-control"></textarea>
                            <span asp-validation-for="itemDesc" class="text-danger"></span>
                            <br />

                            <label asp-for="itemCost">Minimum cost&ast;</label>
                            <input asp-for="itemCost" type="text" class="form-control">
                            <span asp-validation-for="itemCost" class="text-danger"></span>
                            <br />

                            <div class="row">
                                <div class="col">
                                    <label asp-for="startDate">Start Date&ast;</label>
                                    <input asp-for="startDate" type="date" class="form-control">
                                    <span asp-validation-for="startDate" class="text-danger"></span>
                                    <br />
                                </div>

                                <div class="col">
                                    <label asp-for="endDate">Expiry Date&ast;</label>
                                    <input asp-for="endDate" type="date" class="form-control">
                                    <span asp-validation-for="endDate" class="text-danger"></span>
                                    <br />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <label asp-for="itemCondition" class="mt-3">Item condition&ast;</label>
                                    <select asp-for="itemCondition" class="form-control custom-select">
                                        <option selected>Open this select menu</option>
                                        <option value="New">New</option>
                                        <option value="Refurbished">Refurbished</option>
                                        <option value="Open Box">Open Box</option>
                                        <option value="Fairly Used">Fairly Used</option>
                                    </select>
                                    <span asp-validation-for="itemCondition" class="text-danger"></span>
                                    <br />
                                </div>

                                <div class="col">
                                    <label asp-for="categoryName" class="mt-3">Category&ast;</label>
                                    <select asp-for="categoryName" class="form-control custom-select">
                                        <option selected>Open this select menu</option>
                                        <option value="Artifacts">Artifacts</option>
                                        <option value="Artillery">Artillery</option>
                                        <option value="Books">Books</option>
                                        <option value="Cars">Cars</option>
                                        <option value="Furniture">Furniture</option>
                                        <option value="Jewelries">Jewelries</option>
                                    </select>
                                    <span asp-validation-for="categoryName" class="text-danger"></span>
                                    <br />
                                </div>
                            </div>

                            <input asp-for="SellerEmail" type="hidden" value="@User.Identity?.Name" />

                            <div class="mb-3">
                                <label asp-for="formFile" class="form-label">Item Image&ast;</label>
                                <input asp-for="formFile" class="form-control custom-file" type="file" id="formFile">
                            </div>

                            <div class="text-center">
                                <input type="submit" class="btn" value="ADD ITEM" />
                            </div>

                        </form>

                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- /Account Section -->